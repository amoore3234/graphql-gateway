scalar Long

schema {
  query: Query
  mutation: Mutation
}

type Query {
  getGreetings:[Greeting]
  getGreetingById(id:Long):Greeting
}

type Mutation {
  createGreeting(create:GreetingInput):Greeting
  updateGreeting(id:Long, update:GreetingInput):Greeting
  deletGreeting(id:Long):Greeting
}

type Greeting {
  id:ID!
  greeting:String
}

input GreetingInput {
  greeting:String
}